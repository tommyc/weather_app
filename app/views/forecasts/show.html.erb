<%= render "shared/flash" %>
<h1>Forecast</h1>

<%= form_with(method: 'get', local: true) do %>
    <%= label :address, "Address" %><br>
    <%= text_field_tag(:address, @address || @address_default, size: 70) %><br>
    <%= submit_tag("Get Forecast") %>
<% end %>

<% if defined?(@weather) %>
    <ul>
        Weather for: <%= @location.address %>
        <br />
        <li>current: <%= @weather.current_temp %></li>
        <li>low: <%= @weather.min_temp %></li>
        <li>High: <%= @weather.max_temp %></li>
        <li>humidity: <%= @weather.humidity %> %</li>
        <br />
    </ul>
        latitude: <%= @location.latitude %> longitude: <%= @location.longitude %>
<% else%>
    <p>Enter a valid US address to see the Weather.</p>
<% end %>